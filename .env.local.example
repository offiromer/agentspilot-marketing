# Main App URL (where to redirect after login/signup)
# Development: Main app runs on port 3000, marketing will be deployed separately
NEXT_PUBLIC_MAIN_APP_URL=http://localhost:3000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (for API routes - pricing calculator)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Gmail OAuth2 Configuration (for contact form emails - optional)
GMAIL_USER=your_gmail_address@gmail.com
GMAIL_CLIENT_ID=your_google_oauth_client_id
GMAIL_CLIENT_SECRET=your_google_oauth_client_secret
GMAIL_REFRESH_TOKEN=your_gmail_refresh_token
